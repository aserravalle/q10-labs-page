---
import Layout from '../layouts/Layout.astro';
import ProjectsCarousel from '../components/ProjectsCarousel.astro';
import ProductsCarousel from '../components/ProductsCarousel.astro';
---

<Layout title="Home">
  <div class="relative h-screen flex items-center justify-center bg-gray-900 text-white">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-transparent z-10"></div>
    <div class="relative z-20 max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-6xl font-bold mb-6">Custom AI Solutions for SMEs</h1>
      <p class="text-xl mb-8 text-gray-300">
        Prepare your business for the future with experts in machine learning,
        business optimisation, and software engineering.
      </p>
      <a
        href="/about"
        class="inline-block bg-blue-600 text-white px-8 py-3 rounded-full text-lg font-semibold hover:bg-blue-700 transition-colors"
      >
        Learn More
      </a>
    </div>
  </div>

  <section class="py-20 bg-gray-900">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-100">Our Latest Projects</h2>
      <ProjectsCarousel />
    </div>
  </section>

  <section class="py-20 bg-gray-800">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-100">Our Products</h2>
      <ProductsCarousel />
    </div>
  </section>
</Layout>