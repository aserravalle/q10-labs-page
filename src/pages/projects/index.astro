---
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getSortedAndFilteredContent } from '../../content/config';

const projects = await getSortedAndFilteredContent('projects');

---

<Layout title="Past Projects">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold text-gray-100 mb-12">Past Projects</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project) => (
          <ProjectCard project={project} />
        ))
      }
    </div>
  </div>
</Layout>