---
import Card from './Card.astro';

export interface Props {
  product: {
    data: {
      title: string;
      description: string;
      image: string;
      productLink: string;
      features: string[];
      date: Date;
      compact?: boolean;
    };
    slug: string;
  };
}

const { product } = Astro.props;
const { title, description, image, productLink, features, date } = product.data;
const detailsPage = `/products/${product.slug}`;
---

<Card
  title={title}
  description={description}
  image={image}
  detailsPage={detailsPage}
  productLink={productLink}
  features={features}
/>